[alias]
  st = status
  cm = commit
  br = branch -av
  brd = branch -d
  co = checkout
  cod = checkout develop
  com = checkout master
  pa = push --all
  pt = push --tags
  pat = !git pa && git pt
  pu = push -u
  pua = push -u --all
  pub = !git push --all && git push --tags && git push --all acquia && git push --tags acquia
  aa = add -A :/
  fi = flow init -d
  fs = flow feature start
  ff = flow feature finish
  rs = flow release start
  rf = flow release finish
  hs = flow hotfix start
  hf = flow hotfix finish
  df = diff
  lg = log -p
  lsd = log --graph --decorate --pretty=oneline --abbrev-commit --all
  clsd = log --graph --decorate --pretty=oneline --abbrev-commit
  rl = reflog
  rb = rebase
  freebase = pull --rebase
  tags = !git tag | sort -t. -k 1,1n -k 2,2n -k 3,3n -k 4,4n
[push]
  default = simple
[color]
  ui = true
[init]
  templatedir = ~/.git_template
[core]
  excludesfile = ~/.gitignore
  editor = vim
  autocrlf = input
  fileMode = false
